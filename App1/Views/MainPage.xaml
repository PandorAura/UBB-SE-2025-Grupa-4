<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App1.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:models="using:App1.Models" 
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
>

    <Page.Resources>
        <!-- Windows 11 style resources -->
        <CornerRadius x:Key="ControlCornerRadius">8</CornerRadius>
        <CornerRadius x:Key="OverlayCornerRadius">8</CornerRadius>
        <Thickness x:Key="CardBorderThickness">1</Thickness>
        <SolidColorBrush x:Key="CardBackgroundFillColorDefault" Color="{ThemeResource SystemAltHighColor}" />
        <SolidColorBrush x:Key="CardStrokeColorDefault" Color="{ThemeResource SystemChromeGrayColor}" Opacity="0.2" />
        <SolidColorBrush x:Key="AccentColor" Color="#0078d4" />
        <SolidColorBrush x:Key="HeaderBackgroundColor" Color="#1f3d7a" />
        <SolidColorBrush x:Key="AcceptButtonColor" Color="#107C10" />
        <SolidColorBrush x:Key="DeclineButtonColor" Color="#D13438" />
    </Page.Resources>

    <!--main grid-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <!-- Header with Acrylic effect -->
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Background="{StaticResource HeaderBackgroundColor}">
            <Image Margin="24,0,0,0" HorizontalAlignment="Left" Source="Assets/beers-logo.png" Width="32" Height="32"/>
            <TextBlock Text="Admin Dashboard" Foreground="White" FontSize="18" FontWeight="SemiBold" 
                     VerticalAlignment="Center" Margin="68,0,0,0"/>
        </Grid>

        <!-- Left Column - Reviews -->
        <Grid Grid.Row="1" Margin="24,24,12,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Margin="0,0,0,12" FontSize="16" FontWeight="SemiBold">
                List of all reviews
            </TextBlock>

            <!-- Search Box with Windows 11 styling -->
            <TextBox x:Name="ReviewSearchTextBox" Grid.Row="1" Margin="0,0,0,12" 
                     PlaceholderText="Search reviews..."
                     TextChanged="ReviewSearchTextBox_TextChanged"
                     CornerRadius="{StaticResource ControlCornerRadius}"
                     HorizontalAlignment="Stretch"/>

            <!-- Scrollable ListView with Windows 11 card styling -->
            <ListView x:Name="ReviewsList" Grid.Row="2" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,12"
                      Padding="0,4,0,0"
                      SelectionMode="Single"
                      Background="Transparent"
                      BorderThickness="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0,4"/>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Review">
                        <Grid>
                            <Border Padding="16" Background="{ThemeResource CardBackgroundFillColorDefault}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefault}"
                                    BorderThickness="{StaticResource CardBorderThickness}"
                                    CornerRadius="{StaticResource ControlCornerRadius}">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <Border.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="Allow" Click="MenuFlyoutAllowReview_Click">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE73E;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem Text="Hide" Click="MenuFlyoutHideReview_Click">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE711;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem Text="AI Check" Click="MenuFlyoutAICheck_Click_2">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE721;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Border.ContextFlyout>
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" Margin="0,0,0,4">
                                        <Run Text="{x:Bind UserID}"/>
                                    </TextBlock>
                                    <TextBlock TextWrapping="Wrap" Text="{x:Bind Content}"/>
                                </StackPanel>
                                <ToolTipService.ToolTip>
                                    <TextBlock Text="Right click for options"/>
                                </ToolTipService.ToolTip>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Grid.Row="3" 
                    Content="Automatically check reviews" 
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Background="{StaticResource AccentColor}"
                    Foreground="White"
                    Padding="16,8"
                    HorizontalAlignment="Stretch"
                    Click="Button_AutoCheck_Click"/>
        </Grid>

        <!-- Middle Column - Statistics and Requests -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="12,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Statistics Grid -->
            <Border Grid.Row="0" Margin="0,0,0,20"
                    Background="{ThemeResource CardBackgroundFillColorDefault}"
                    BorderBrush="{ThemeResource CardStrokeColorDefault}"
                    BorderThickness="{StaticResource CardBorderThickness}"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Padding="16">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Statistics" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <lvc:PieChart x:Name="AllUsersPieChart" Grid.Column="0" Margin="0,12"/>
                        <lvc:CartesianChart x:Name="TotalDataBarChart" Grid.Column="1" Margin="0,12"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Role Requests Grid -->
            <Border Grid.Row="1"
                    Background="{ThemeResource CardBackgroundFillColorDefault}"
                    BorderBrush="{ThemeResource CardStrokeColorDefault}"
                    BorderThickness="{StaticResource CardBorderThickness}"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Padding="16">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Role requests" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <ListView x:Name="RequestsList" Grid.Row="1" 
                              MaxHeight="150"
                              Background="Transparent"
                              BorderThickness="0"
                              IsItemClickEnabled="True" 
                              ItemClick="RequestList_ItemClick">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0,4"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12" 
                                        Background="{ThemeResource CardBackgroundFillColorDefault}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefault}"
                                        BorderThickness="{StaticResource CardBorderThickness}"
                                        CornerRadius="{StaticResource ControlCornerRadius}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.5*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding}" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold" 
                                                   VerticalAlignment="Center" 
                                                   Grid.Column="0"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,8,0"/>

                                        <Button Content="Accept" 
                                                Background="{StaticResource AcceptButtonColor}" 
                                                Foreground="White" 
                                                CornerRadius="{StaticResource ControlCornerRadius}"
                                                Padding="8,4"
                                                Grid.Column="1" 
                                                Margin="4,0"
                                                Click="AcceptButton_Click" 
                                                Tag="{Binding RequestId}"/>

                                        <Button Content="Decline" 
                                                Background="{StaticResource DeclineButtonColor}" 
                                                Foreground="White" 
                                                CornerRadius="{StaticResource ControlCornerRadius}"
                                                Padding="8,4"
                                                Grid.Column="2" 
                                                Margin="4,0"
                                                Click="DeclineButton_Click" 
                                                Tag="{Binding RequestId}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>

        <!-- Right Column - Appeals -->
        <Grid Grid.Row="1" Grid.Column="2" Margin="12,24,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Margin="0,0,0,12" FontSize="16" FontWeight="SemiBold">
                List of all appeals
            </TextBlock>

            <TextBox x:Name="BannedUserSearchTextBox" Grid.Row="1" Margin="0,0,0,12" 
                     PlaceholderText="Search appeals..."
                     TextChanged="BannedUserSearchTextBox_TextChanged"
                     CornerRadius="{StaticResource ControlCornerRadius}"
                     HorizontalAlignment="Stretch"/>

            <ListView x:Name="AppealsList" Grid.Row="2" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto" 
                      IsItemClickEnabled="True" 
                      ItemClick="AppealsList_ItemClick"
                      Background="Transparent"
                      BorderThickness="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0,4"/>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="16" 
                                Background="{ThemeResource CardBackgroundFillColorDefault}"
                                BorderBrush="{ThemeResource CardStrokeColorDefault}"
                                BorderThickness="{StaticResource CardBorderThickness}"
                                CornerRadius="{StaticResource ControlCornerRadius}">
                            <Border.Shadow>
                                <ThemeShadow />
                            </Border.Shadow>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>