<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App1.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:models="using:App1.Models" 
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
>

    <!--main grid-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row ="0" Grid.ColumnSpan ="3" Background="#1f3d7a"/>

        <Image Margin="20,0,0,0" HorizontalAlignment="Left" Source="Assets/beers-logo.png"/>

        <Grid Grid.Row="1" Margin="20" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!-- Search Box -->
                <RowDefinition Height="*"/>
                <!-- ListView (Expands) -->
                <RowDefinition Height="Auto"/>
                <!-- Button -->
            </Grid.RowDefinitions>

            <TextBlock Margin="20,20,20,0" FontSize="14" Foreground="Black">
                <Bold>List of all reviews: </Bold>
            </TextBlock>

            <!-- Search Box -->
            <TextBox x:Name="ReviewSearchTextBox" Grid.Row="1" Margin="20" Width="200" 
                     PlaceholderText="Search reviews..."
                     TextChanged="ReviewSearchTextBox_TextChanged"/>

            <!-- Scrollable ListView -->
            <ListView x:Name="ReviewsList" Grid.Row="2" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Review">
                        <Border Margin="5" Padding="10" Background="LightGray" CornerRadius="5">
                            <Border.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Allow" Icon="Accept" Click="MenuFlyoutAllowReview_Click" />
                                    <MenuFlyoutItem Text="Hide" Icon="Cancel" Click="MenuFlyoutHideReview_Click"/>
                                    <MenuFlyoutItem Text="AI Check" Icon="Find" Click="MenuFlyoutAICheck_Click_2" />
                                </MenuFlyout>
                            </Border.ContextFlyout>
                            <StackPanel>
                                <TextBlock FontSize="14" Foreground="Black">
                        <Run Text="{x:Bind UserID}"/>
                        <Run Text=": "/>
                        <Run Text="{x:Bind Content}"/>
                                </TextBlock>
                            </StackPanel>
                            <ToolTipService.ToolTip>
                                <TextBlock Text="Right click for options"/>
                            </ToolTipService.ToolTip>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Grid.Row="3" Content="Automatically check reviews" Margin="20"/>
        </Grid>

        <!--appeals column-->
        <Grid Grid.Row="1" Grid.Column="2" Margin="20" HorizontalAlignment="Center" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <!--search box resizes, the others stay fixed-->
            </Grid.RowDefinitions>

            <TextBlock Margin="20,20,20,0" FontSize="14" Foreground="Black">
                <Bold>List of all appeals: </Bold>
            </TextBlock>

            <TextBox x:Name="BannedUserSearchTextBox" Grid.Row="1" Margin="20" Width="200" 
                     PlaceholderText="Search appeals..."
                     TextChanged="BannedUserSearchTextBox_TextChanged"/>

            <ListView x:Name="AppealsList" Grid.Row="2" ScrollViewer.VerticalScrollBarVisibility="Auto" IsItemClickEnabled="True" ItemClick="AppealsList_ItemClick">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="10" Background="LightGray" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="{Binding}" FontSize="14" Foreground="Black"/>
                                <!--<TextBlock Text="{Binding email}" FontSize="14" Foreground="Black"/>-->
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!--statistics and role requests column-->
        <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!--statistics grid-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <lvc:PieChart x:Name="AllUsersPieChart" Grid.Column="0"/>
                <lvc:CartesianChart x:Name="TotalDataBarChart" Grid.Column="1"/>
            </Grid>
            <!--role requests grid-->
            <Grid Grid.Row="1" Margin="20" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Margin="20,20,20,0" FontSize="14" Foreground="Black">
                    <Bold>Role requests: </Bold>
                </TextBlock>
                <ScrollViewer Grid.Row="1" MaxHeight="150" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="RequestsList">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5" Padding="10" Background="LightGray" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding}" FontSize="14" Foreground="Black"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </Grid>

    </Grid>

</Page>
