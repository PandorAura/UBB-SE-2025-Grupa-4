<!-- Add as Content to your project -->
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Admin Report" FontSize="18" FontWeight="Bold"/>
        <TextBlock Text="Report Date: {{ReportDate}}"/>

        <StackPanel Margin="0,10" Background="#EEE">
            <TextBlock Text="Statistics:" FontWeight="Bold"/>
            <StackPanel Margin="20,5">
                <TextBlock Text="Active Users: {{ActiveUsersCount}}"/>
                <TextBlock Text="Banned Users: {{BannedUsersCount}}"/>
                <TextBlock Text="New Reviews: {{NewReviewsCount}}"/>
                <TextBlock Text="Average Rating: {{AverageRating}}"/>
            </StackPanel>
        </StackPanel>

        <TextBlock Text="Generated at: {{GenerationTime}}" FontStyle="Italic"/>
    </StackPanel>
</Grid>